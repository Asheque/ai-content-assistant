import { NextResponse } from "next/server";
import OpenAI from "openai";

// Create OpenAI client, reading the key from your .env.local file
const client = new OpenAI({
  apiKey: process.env.OPENAI_API_KEY,
});

export async function POST(req: Request) {
  try {
    const { prompt } = await req.json();

    if (!prompt) {
      return NextResponse.json({ text: "No prompt provided." }, { status: 400 });
    }

    // Call OpenAI API
    const response = await client.chat.completions.create({
      model: "gpt-4o-mini", // Small, fast model (cheap to run)
      messages: [{ role: "user", content: prompt }],
      max_tokens: 200, // Controls response length
    });

    const text = response.choices[0].message?.content?.trim() || "No response";

    return NextResponse.json({ text });
  } catch (error: any) {
    console.error("OpenAI API Error:", error);
    return NextResponse.json(
      { text: "Error generating content. Check server logs." },
      { status: 500 }
    );
  }
}
